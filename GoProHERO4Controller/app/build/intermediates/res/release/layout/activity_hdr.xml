<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.chernowii.hero4.HDR">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HDR trigger for HERO4 cameras"
        android:id="@+id/textView11"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Click the buttons according to the desired bracketing level.\nSet your camera to Single in Photo mode!\nWait until a strong vibration and a HDR finished alert."
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+2.0 | 0 | -2.0"
        android:id="@+id/button7"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:onClick="sendHDROne"
        android:layout_alignEnd="@+id/textView12" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1.5 | 0 | -1.5"
        android:id="@+id/button8"
        android:onClick="sendHDRTwo"
        android:layout_below="@+id/button7"
        android:layout_alignStart="@+id/button7"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1.0 | 0 | -1.0"
        android:onClick="sendHDRThree"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button8" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+0.5 | 0 | -0.5"
        android:onClick="sendHDRFour"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_alignEnd="@+id/button9" />
</RelativeLayout>
