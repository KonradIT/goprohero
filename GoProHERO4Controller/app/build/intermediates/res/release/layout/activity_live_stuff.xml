<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.chernowii.hero4.LiveStuff">


    <VideoView
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:id="@+id/videoView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="refresh stream"
        android:id="@+id/button6"
        android:onClick="restartStream"
        android:layout_below="@+id/videoView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:onClick="sendStart"
        android:id="@+id/button20"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/button6"
        android:layout_below="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:onClick="sendStop"
        android:id="@+id/button23"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button20"
        android:layout_below="@+id/button6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        android:onClick="sendVideo"
        android:id="@+id/button19"
        android:layout_below="@+id/button20"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:onClick="sendPhoto"
        android:id="@+id/button21"
        android:layout_alignTop="@+id/button19"
        android:layout_toEndOf="@+id/button19" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Burst"
        android:onClick="sendBurst"
        android:id="@+id/button24"
        android:layout_alignTop="@+id/button21"
        android:layout_toEndOf="@+id/button21" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TL"
        android:onClick="sendTimelapse"
        android:id="@+id/button25"
        android:layout_alignTop="@+id/button21"
        android:layout_alignEnd="@+id/button23"
        android:layout_toEndOf="@+id/button24" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on"
        android:onClick="sendTurnOn"
        android:id="@+id/button32"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn off"
        android:onClick="sendTurnOff"
        android:id="@+id/button33"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
